<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Common Template</title>
    <link rel="stylesheet" href="/styles/global.css">

</head>

    <style>
        .side-bar{
            background: rgba(255, 255, 255, 0.152);
            width: 20vw;
            height: calc(100vh - 10vh);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 3vw;
            position: fixed;
            top: 10vh;
        }
        button{
            width: 20vw;
            border-style: none;
            font-size: 1.7vw;
            padding: 10px ;
            text-align: center;
            border-radius: 2px;
            font-family: 'Roboto Condensed', sans-serif;

        }

    *{
        margin: 0;
        padding: 0;
    }
    nav{
        width: 100%;
        height: 10vh;
        display: flex;
        align-items: center;
        justify-content: space-around;
        gap: 100vh;
        z-index: 2;
        color: white;
        background: rgba(0, 0, 0, 0.395);
        position: fixed;
    }
    #s_nav{
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        /* gap: 1vw; */
    }
    #s_nav #admin-btn{
        font-size: 17px;
        cursor: pointer;
        color: white;
    }
    form{
        text-align: center;
    }
    svg{
        fill: rgb(0, 196, 0);
    }  
    form #admin-btn{
        width: fit-content;
        background: transparent;
        border-style: none;
        outline: none;
        padding: 2px;

    } 
</style>
<body>
    <!-- NAVBAR -->
    <nav>
        <h1>Inventory Management</h1>
            <form method="get" action="/home/admin" id="s_nav">
                <svg xmlns="http://www.w3.org/2000/svg" height="1.7em" viewBox="0 0 448 512"><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/></svg> 
               <button id="admin-btn"> Admin</button>
            </form>
    </nav>

    <!-- SIDE BAR -->
    <div class="side-bar">
        <form method="get" action="/home/show"><button>Visit Inventory</button></form>

        <form method="get" action="/home/update"><button>Update Inventory</button></form>

        <form method="get" action="/home/newstock"><button>Add New Stock</button></form>

        <form method="get" action="/home/sellstock"><button>Sell Stock</button></form>

        <form method="get" action="/home/sell_history"><button>Sell History</button></form>

    </div>

</body>
</html>