<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Common Template</title>
    <link rel="stylesheet" href="/styles/global.css">

</head>

    <style>
        .side-bar{
            background: rgba(255, 255, 255, 0.152);
            width: 20vw;
            height: calc(100vh - 10vh);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 3vw;
            position: fixed;
            top: 10vh;
        }
        button{
            width: 20vw;
            border-style: none;
            font-size: 1.7vw;
            padding: 10px ;
            text-align: center;
            border-radius: 2px;
            font-family: 'Roboto Condensed', sans-serif;

        }

    *{
        margin: 0;
        padding: 0;
    }
    nav{
        width: 100%;
        height: 10vh;
        display: flex;
        align-items: center;
        justify-content: space-around;
        gap: 100vh;
        z-index: 2;
        color: white;
        background: rgba(0, 0, 0, 0.395);
        position: fixed;
    }
    #s_nav{
        display: flex;
        align-items: center;
        gap: 4vw;
    }
    #s_nav h3{
        font-size: 22px;
    }
</style>
<body>
    <!-- NAVBAR -->
    <nav>
        <h1>Inventory Management</h1>
        <span id="s_nav">
            <h3 style="cursor: pointer;"> User</h3>
            <h3 style="cursor: pointer;">login</h3>
        </span>
    </nav>

    <!-- SIDE BAR -->
    <div class="side-bar">
        <form method="get" action="/home/show"><button>Visit Inventory</button></form>

        <form method="get" action="/home/update"><button>Update Inventory</button></form>

        <form method="get" action="/home/newstock"><button>Add New Stock</button></form>

        <form method="get" action="/home/sellstock"><button>Sell Stock</button></form>

        <form method="get" action="/home/sell_history"><button>Sell History</button></form>

    </div>

</body>
</html>